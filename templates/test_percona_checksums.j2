#!/usr/bin/env bats

{% import "macros.j2" as macros with context -%}
{%- set global=manifest['global'] -%}
{%- set replication=manifest['replication'] -%}
{%- set pods=manifest['pods'] -%}

{{ macros.import_common_functions() }}

@test '{{ test_name }}' {

{{ macros.mysql_start_slave() }}
{{ macros.mysql_wait_for_replication() }}

{{ macros.mysql_jump() }} --host={{ pods[0].name }} --execute 'DROP DATABASE IF EXISTS ptest'

run {{ macros.mysql_jump() }} --host={{ pods[0].name }} --execute 'USE ptest'
[ "$status" -eq 1 ]

run {{ macros.mysql_jump() }} --host=my4p --execute 'USE ptest'
[ "$status" -eq 1 ]

{{ macros.mysql_create_database_ptest() }} --host={{ pods[0].name }}

result=$({{ macros.mysql_jump() }} --host=my4p --database=ptest --execute 'SELECT id FROM dummy WHERE name="a"')
[ $result -eq 1 ]

result=$({{ macros.mysql_jump() }} --host=my4p --database=ptest --execute 'SELECT id FROM dummy WHERE name="c"')
[ "$result" == "" ]

{{ macros.percona_checksum() }}








}
